<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img1"

            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/bb" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img2"

            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bb" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:fontFamily="cursive"
            android:padding="10dp"
            android:text="Hi!"
            android:textColor="#FFC107"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:fontFamily="cursive"
            android:padding="10dp"
            android:text="@string/txt2"
            android:textColor="#FFC107"
            android:textSize="40sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt1"
            android:layout_centerVertical="true"
            android:layout_marginBottom="151dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/txt3"
            android:textColor="#FFC107"
            android:textSize="40sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="cursive"
            android:gravity="center"
            android:padding="10dp"

            android:textColor="#FFC107"
            android:textSize="50sp"
            android:visibility="invisible" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img3"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bb" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#FF9800"
            android:fontFamily="cursive"
            android:padding="10dp"
            android:text="Giải quẻ"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:visibility="invisible">

        </Button>

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img4"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/bb"
            android:visibility="invisible" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img5"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/img1"
            android:layout_marginLeft="50dp"
            android:src="@drawable/bb"
            android:visibility="invisible" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img6"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_above="@id/img3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/bb"
            android:visibility="invisible" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img7"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/txt4"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/bb"
            android:visibility="invisible" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img10"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/txt4"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/bai1"
            android:visibility="invisible" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img8"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/bb"
            android:visibility="invisible" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img11"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/bai2"
            android:visibility="invisible" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img9"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/txt2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/bb"
            android:visibility="invisible" />

        <com.t3h.firstproject.customview.MyImageView
            android:id="@+id/img12"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/txt2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/baik"
            android:visibility="invisible" />
    </RelativeLayout>
</layout>